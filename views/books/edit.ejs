<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head') %>

    <body>


        <div class="layout">
            <%- include('../partials/nav') %>
                <%- include('../partials/flash') %>
                    <main class="main-new">
                        <section class="new-book container">

                            <form action="/books/<%= foundBook._id %>?_method=PATCH" method="POST">
                                <h4>Add A New Book</h4>
                                <div class="first-two">
                                    <div class="field">
                                        <label for="book-name">Title:</label>
                                        <input type="text" name="bookName" id="book-name"
                                            value="<%= foundBook.bookName %>" required>
                                    </div>
                                    <div class="field">
                                        <label for="author">Author:</label>
                                        <input type="text" name="author" id="author" value="<%= foundBook.author %>"
                                            required>
                                    </div>
                                </div>
                                <div class="field">
                                    <label for="img-url">ImageURL: </label>
                                    <input type="text" name="imageUrl" id="img-url" value="<%= foundBook.imageUrl %>"
                                        required>
                                </div>
                                <div class="field">
                                    <label for="description">Description: </label>
                                    <input type="text" name="description" id="description"
                                        value="<%= foundBook.description %>" required>
                                </div>
                                <button class="btn-green">Submit</button>
                            </form>
                        </section>
                    </main>



                    <%- include('../partials/footer') %>
        </div>

    </body>

</html>